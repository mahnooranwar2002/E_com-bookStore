@{
    Layout = "../shared/dashbroadlayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
        * {
      box-sizing: border-box;
    }

    /* Float four columns side by side */
    .column {
      float: left;
      width: 25%;
      padding: 0 5px;
    }

    .row {margin: 10px;

    }

    /* Clear floats after the columns */
    .row:after {
      content: "";
      display: table;
      clear: both;
    }

    /* Responsive columns */
    

    /* Style the counter cards */
    .card {
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
      padding: 16px;
      text-align: center;
      background-color:  #063547;
      color: white;
    }

    .fa {font-size:50px;}
    p i{
        font-size:30px;
    }
</style>
<body>

    <div class="row">
        <div class="column">
            <div class="card">
                <p><i class="ri-user-settings-fill"></i></p>
                <h3>@TempData["count_admin"]</h3>
                <p>Admins</p>
            </div>
        </div>

        <div class="column">
            <div class="card">
                <p><i class="ri-group-line"></i></p>
                <h3>@TempData["count_user"]</h3>
                <p>Users</p>
            </div>
        </div>

        <div class="column">
            <div class="card">
                <p><i class='bx bxs-user-circle'></i></p>
                <h3>@TempData["count_author"]</h3>
                <p>Authors</p>
            </div>
        </div>
        <div class="column">
            <div class="card">
                <p> <i class='bx bxs-phone'></i></p>
                <h3>@TempData["count_con"]</h3>
                <p>Contact</p>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="column">
            <div class="card">
                <p> <i class='bx bxs-edit-alt'></i></p>
                <h3>@TempData["count_genres"]</h3>
                <p>Genres</p>
            </div>
        </div>

        <div class="column">
            <div class="card">
                <p><i class='bx bxs-book-bookmark'></i></p>
                <h3>@TempData["count_book"]</h3>
                <p>Books</p>
            </div>
        </div>

        <div class="column">
            <div class="card">
                <p>    <i class="ri-shopping-cart-fill"></i></p>
                <h3>@TempData["count_order"]</h3>
                <p>Orders</p>
            </div>
        </div>
        <div class="column">
            <div class="card">
                <p>  <i class="ri-questionnaire-line"></i></p>
                <h3>10 </h3>
                <p>Faq</p>
            </div>
        </div>

    </div>
</body>
</html>